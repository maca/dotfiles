#!/bin/bash

# backup my music and movies, remotelly or locally to my home server
addr=$($HOME/bin/house-addr)
host=$(echo $addr | cut -d ':' -f1)
port=$(echo $addr | cut -d ':' -f2)
# music sync remotelly deleting if locally deleted
rsync -zia --delete --rsh="ssh -p$port" /secondary/Music maca@$host:backup
# movies sync not deleting remotelly if locally deleted
rsync -zia --rsh="ssh -p$port" /secondary/Movies maca@$host:backup
